    <link href="~/recursos/vendor/nucleo/css/nucleo.css" rel="stylesheet" />


    <!------>
    <link href="~/recursos/css/argon.css?v=1.2.0" rel="stylesheet" />
    <link href="~/recursos/vendor/fortawesome/fontawesome-free/css/all.min.css" rel="stylesheet" />

    <!--DataTables-->
    <link href="~/recursos/DataTables/datatables.min.css" rel="stylesheet" />
    <link href="~/recursos/DataTables/css/dataTables.semanticui.min.css" rel="stylesheet" />
    <link href="~/recursos/DataTables/css/dataTables.foundation.min.css" rel="stylesheet" />
    <script src="~/recursos/js/jquery-3.5.1.min.js"></script>

</head>
<body>
    <!-- Sidenav -->
    <nav class="sidenav navbar navbar-vertical  fixed-left  navbar-expand-xs navbar-light bg-white" id="sidenav-main" style="position:fixed">
        <div class="scrollbar-inner">
            <!-- Brand -->
            <div class="sidenav-header  align-items-center" style="padding-top:10px;">
                <img src="~/recursos/imagen/logo900.png" width="150" height="150" alt="...">
            </div>
            <div class="navbar-inner">
                <!-- Collapse -->
                <div class="collapse navbar-collapse" id="sidenav-collapse-main">
                    <!-- Divider -->
                    <hr class="my-3">
                    <!-- Heading -->
                    <h6 class="navbar-heading p-0 text-muted">
                        <span class="docs-normal">USUARIOS</span>
                    </h6>
                    <!-- Nav items -->
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="~/PersonalObun/Index">
                                <img src="~/recursos/imagen/personal.png" width="20" height="20" style="margin-right:10px;">
                                <span class="nav-link-text">Personal OBUN</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " href="~/Usuario/Index">
                                <img src="~/recursos/imagen/usuarios.png" width="20" height="20" style="margin-right:10px;">
                                <span class="nav-link-text">Usuarios</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/Estudiante/Index">
                                <img src="~/recursos/imagen/estudiante.png" width="20" height="20" style="margin-right:10px;">
                                <span class="nav-link-text">Estudiantes</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/Docente/Index">
                                <img src="~/recursos/imagen/teacher.png" width="20" height="20" style="margin-right:10px;">
                                <span class="nav-link-text">Docentes</span>
                            </a>
                        </li>
                    </ul>
                    <!-- Divider -->
                    <hr class="my-3">
                    <!-- Heading -->
                    <h6 class="navbar-heading p-0 text-muted">
                        <span class="docs-normal">TAEX</span>
                    </h6>
                    <!-- Navigation -->
                    <ul class="navbar-nav mb-md-3">
                        <li class="nav-item">
                            <a class="nav-link" href="~/Lugar/Index">
                                <img src="~/recursos/imagen/lugar.png" width="20" height="20" style="margin-right:10px;">
                                <span class="nav-link-text">Lugares</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/Talleres/Index">
                                <img src="~/recursos/imagen/taller.png" width="20" height="20" style="margin-right:10px;">
                                <span class="nav-link-text">Talleres</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/Matricula/Index">
                                <img src="~/recursos/imagen/matricula.png" width="20" height="20" style="margin-right:10px;">
                                <span class="nav-link-text">Matrícula</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>
    <!-- Main content -->
    <div class="main-content" id="panel">
        <!-- Topnav -->
        <nav class="navbar navbar-top navbar-expand navbar-dark bg-primary border-bottom">
            <div class="container-fluid">
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <!-- Navbar links -->
                    <ul class="navbar-nav align-items-center  ml-md-auto ">
                        <li class="nav-item d-xl-none">
                            <!-- Sidenav toggler -->
                            <div class="pr-3 sidenav-toggler sidenav-toggler-dark" data-action="sidenav-pin" data-target="#sidenav-main">
                                <div class="sidenav-toggler-inner">
                                    <i class="sidenav-toggler-line"></i>
                                    <i class="sidenav-toggler-line"></i>
                                    <i class="sidenav-toggler-line"></i>
                                </div>
                            </div>
                        </li>
                    </ul>
                    <ul class="navbar-nav align-items-center  ml-auto ml-md-0 ">
                        <li class="nav-item dropdown">
                            <a class="nav-link pr-0" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <div class="media align-items-center">
                                    <span class="avatar avatar-sm rounded-circle">
                                        <!--<img alt="Image placeholder" src="assets/img/theme/team-4.jpg">-->
                                    </span>
                                    <div class="media-body  ml-2  d-none d-lg-block">
                                        <span class="mb-0 text-sm  font-weight-bold">John Snow</span>
                                    </div>
                                </div>
                            </a>
                            <div class="dropdown-menu  dropdown-menu-right ">
                                <div class="dropdown-header noti-title">
                                    <h6 class="text-overflow m-0">¡Bienvenido!</h6>
                                </div>
                                <a href="#!" class="dropdown-item">
                                    <img src="~/recursos/imagen/user.png" width="20" height="20" style="margin-right:10px;">
                                    <span>Mi perfil</span>
                                </a>
                                <div class="dropdown-divider"></div>
                                <a href="~/Login/Index" class="dropdown-item">
                                    <img src="~/recursos/imagen/signout.png" width="20" height="20" style="margin-right:10px;">
                                    <span>Cerrar Sesión</span>
                                </a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- Header -->
        @RenderBody()

    </div>
    <script>
        $(document).ready(function () {
            $('#DataTablesVertical').DataTable({
                "scrollY": "200px",
                "scrollCollapse": true,
                "paging": false
            });
        });

        $(document).ready(function () {
            $('#DataTablesHorizontal').DataTable({
                "scrollX": true
            });
        });

        $(document).ready(function () {
            $('#DataTablesDefault').DataTable({
                "order": [[3, "desc"]]
            });
        });

        $(document).ready(function () {
            $('#DataTablesLanguage').DataTable({
                "aLengthMenu": [[2, 5, 10, 25, 50, 100, 200, -1], [2, 5, 10, 25, 50, 100, 200, "Todos"]],
                "bDestroy": true,
                "language": {
                    "lengthMenu": "Mostrar _MENU_  registros",
                    "zeroRecords": "No se encontraron resultados",
                    "emptyTable": "Ningún dato disponible en esta tabla",
                    "info": "Mostrando registros del _START_ al _END_ de un total de _TOTAL_ registros",
                    "infoEmpty": "Mostrando registros del 0 al 0 de un total de 0 registros",
                    "infoFiltered": "(filtrado de un total de _MAX_ registros)",
                    "infoPostFix": "",
                    "search": "Buscar:",
                    "url": "",
                    "infoThousands": ",",
                    "loadingRecords": "Cargando...",
                    "oPaginate": {
                        "sFirst": "Primero",
                        "sLast": "Último",
                        "sNext": "Siguiente",
                        "sPrevious": "Anterior"
                    }
                }
            });
        });
    </script>

    <!--Boostrap-->
    <script src="~/recursos/js/bootstrap.min.js"></script>
    <script src="~/recursos/vendor/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/recursos/vendor/js-cookie/js.cookie.js"></script>
    <!--Datatables-->
    <script src="~/recursos/DataTables/datatables.min.js"></script>

    <script src="~/recursos/js/argon.js"></script>
</body>
</html>
