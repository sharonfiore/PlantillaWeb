
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Iniciar Sesión</title>

    <link href="~/source/css/style.css" rel="stylesheet" />

    <script src="~/recursos/js/jquery-3.5.1.min.js"></script>
</head>
<body>
    <section class="p-0 d-flex align-items-center">
        <div class="container-fluid">
            <div class="row">
                <!-- left -->
                <div class="col-12 col-md-6 col-lg-5 d-md-flex align-items-center bg-grad ">
                    <div class="w-100 p-3 p-lg-5 all-text-white">
                        <div class="justify-content-center align-self-center">
                            <!-- SVG Logo Start -->
                            <img src="~/recursos/imagen/logolineal.png" width="350">
                            <!-- SVG Logo End -->
                        </div>
                        <h3 class="font-weight-light"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Registrate para participar de los talleres extracurriculares.</font></font></h3>
                        <ul class="list-group list-group-borderless mt-4">
                            <li class="list-group-item text-white"><i class="fa fa-check"></i>
                            <font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Oficina de Bienestar Universitario</font></font></li>
                            <li class="list-group-item text-white"><i class="fa fa-check"></i><font style="vertical-align: inherit;">
                                <font style="vertical-align: inherit;">Talleres Extracurriculares</font></font></li>
                            <li class="list-group-item text-white"><i class="fa fa-check"></i><font style="vertical-align: inherit;">
                                <font style="vertical-align: inherit;">Demuestra tu talento o aprende uno nuevo.</font></font></li>
                        </ul>
                    </div>
                </div>
                <!-- Right -->
                <div class="col-12 col-md-6 col-xl-7 mx-auto my-5">
                    <div class="row h-100">
                        <div class="col-12 col-md-10 col-lg-8 text-left mx-auto d-flex align-items-center">
                            <div class="w-100">
                                <h2><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">
                                    ¡Regístrese!</font></font></h2>
                                <h5 class="font-weight-light">
                                <font style="vertical-align: inherit;"><font style="vertical-align: inherit;">
                                    ¡Únete a la familia de O! </font><font style="vertical-align: inherit;">Crea tu cuenta fácilmente con menos información.</font></font></h5>
                                <div class="form mt-5 ">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="form-control-label" for="input-username"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Nombre de usuario</font></font></label>
                                                <input type="text" id="input-username" class="form-control" placeholder="Nombre de usuario" value="lucky.jesse">
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="form-control-label" for="input-email"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Dirección de correo electrónico</font></font></label>
                                                <input type="email" id="input-email" class="form-control" placeholder="jesse@example.com">
                                            </div>
                                        </div>
                                    </div>
                                    <div>
                                        <p class="text-left mb-2"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Dirección de correo electrónico</font></font></p>
                                        <span class="form-group"><input type="email" class="form-control" placeholder="Email"></span>
                                    </div>
                                    <div>
                                        <div class="align-items-center">
                                            <p class="text-left mb-2"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Contraseña</font></font></p>
                                        </div>
                                        <span class="form-group"><input type="password" class="form-control" placeholder="*********"></span>
                                    </div>
                                    <div>
                                        <div class="align-items-center">
                                            <p class="text-left mb-2"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Contraseña</font></font></p>
                                        </div>
                                        <span class="form-group"><input type="password" class="form-control" placeholder="*********"></span>
                                    </div>
                                    <div>
                                        <div class="align-items-center">
                                            <p class="text-left mb-2"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Contraseña</font></font></p>
                                        </div>
                                        <span class="form-group"><input type="password" class="form-control" placeholder="*********"></span>
                                    </div>
                                    <div>
                                        <div class="align-items-center">
                                            <p class="text-left mb-2"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Contraseña</font></font></p>
                                        </div>
                                        <span class="form-group"><input type="password" class="form-control" placeholder="*********"></span>
                                    </div>
                                    <div>
                                        <div class="align-items-center">
                                            <p class="text-left mb-2"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Confirmar contraseña</font></font></p>
                                        </div>
                                        <span class="form-group"><input type="password" class="form-control" placeholder="*********"></span>
                                    </div>
                                    <div class="custom-control custom-checkbox mr-sm-2 mb-4">
                                        <input type="checkbox" class="custom-control-input" id="customControlAutosizing">
                                        <label class="custom-control-label" for="customControlAutosizing"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Al registrarte, aceptas los </font></font><a href="#"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">términos del servicio</font></font></a></label>
                                    </div>
                                    <div class="row align-items-center no-gutters m-0">
                                        <div class="col-6">
                                            <span class="text-muted"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">¿Ya estás en wizixo? </font></font><a href="sign-in.html"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Registrarse</font></font></a></span>
                                        </div>
                                        <div class="col-6 text-right">
                                            <button class="btn btn-grad text-white  ">
                                                <font style="vertical-align: inherit;"><font style="vertical-align: inherit;"><strong>Registrar</strong></font></font>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/source/vendor/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/source/vendor/jquery/jquery.min.js"></script>
    <script src="~/source/js/functions.js"></script>
</body>
</html>

